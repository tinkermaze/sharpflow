{
  "title": "Sharpflow.Client.Tests",
  "description": "Unit tests for Sharpflow .NET client library",
  "copyright": "Copyright (c) 2016 tinkermaze",
  "version": "1.0.0-*",

  "dependencies": {
    "Sharpflow.Client": {
      "target": "project"
    }
  },

  "frameworks": {

    "netcoreapp1.0": {
      "imports": [
        "portable-net45+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0-*"
        },
        "xunit": "2.2.0-beta2-build3300",
        "dotnet-test-xunit": "2.2.0-preview2-build1029"
      }
    },

    "net45": {
      "dependencies": {
        "xunit": "2.1.0"
      },
      "frameworkAssemblies": {
        "System.Runtime": {
          "type": "build"
        }
      }
    },

    "net35": {
      "buildOptions": {
        "define": [
          "NET35"
        ]
      },
      "dependencies": {
        "xunit": "1.9.2"
      }
    }
  },

  "testRunner": "xunit"
}
